{
  "buildCommand": "npm run build",
  "installCommand": "npm install --legacy-peer-deps",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "https://learnbridge-auth-service.onrender.com/api/auth/:path*"
    },
    {
      "source": "/api/teacher-tools/:path*",
      "destination": "https://learnbridge-teacher-tools-service.onrender.com/api/teacher-tools/:path*"
    },
    {
      "source": "/api/quizzes/:path*",
      "destination": "https://learnbridgedu.onrender.com/api/quizzes/:path*"
    },
    {
      "source": "/api/ai/:path*",
      "destination": "https://learnbridge-ai-service.onrender.com/api/ai/:path*"
    },
    {
      "source": "/api/users/:path*",
      "destination": "https://user-service-3j2j.onrender.com/api/users/:path*"
    },
    {
      "source": "/api/content/:path*",
      "destination": "https://content-service-e54f.onrender.com/api/content/:path*"
    }
  ]
}
